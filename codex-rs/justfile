set positional-arguments

# Display help
help:
    just -l

# `codex` (compat alias for nova)
codex *args:
    cargo run --bin nova -- "$@"

# `nova exec`
exec *args:
    cargo run --bin nova -- exec "$@"

# `nova` interactive TUI
tui *args:
    cargo run --bin nova -- "$@"

# Run the CLI version of the file-search crate.
file-search *args:
    cargo run --bin codex-file-search -- "$@"

# format code
fmt:
    cargo fmt -- --config imports_granularity=Item

fix *args:
    cargo clippy --fix --all-features --tests --allow-dirty "$@"

install:
    rustup show active-toolchain
    cargo fetch
